<h2>Show Task</h2>

<ul>

  <li>
    <strong>Is completed:</strong>
    <%= @task.is_completed %>
  </li>

  <li>
    <strong>Title:</strong>
    <%= @task.title %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @task.description %>
  </li>

  <li>
    <strong>Minutes worked:</strong>
    <%= @task.minutes_worked %>
  </li>

</ul>

<span><%= link "Edit", to: task_path(@conn, :edit, @task) %></span>
<span><%= link "Back", to: task_path(@conn, :index) %></span>
